indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{py}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{html,css,js}]
indent_style = space
indent_size = 2
